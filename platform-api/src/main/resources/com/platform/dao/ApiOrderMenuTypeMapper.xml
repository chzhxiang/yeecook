<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiOrderMenuTypeMapper">

    <resultMap type="com.platform.entity.OrderMenuTypeEntity" id="orderMenuTypeMap">
        <result property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="typeName" column="type_name"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.OrderMenuTypeEntity">
		select
			`id`,
			`parent_id`,
			`type_name`
		from nideshop_order_menu_type
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.OrderMenuTypeEntity">
		select b.* from stroe a
		left JOIN nideshop_order_menu_type b on a.store_type=b.id
		WHERE 1=1
		<if test="type != null ">
			AND
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from nideshop_order_menu_type
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.OrderMenuTypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_order_menu_type(
			`parent_id`,
			`type_name`)
		values(
			#{parentId},
			#{typeName})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.OrderMenuTypeEntity">
		update nideshop_order_menu_type 
		<set>
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="typeName != null">`type_name` = #{typeName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from nideshop_order_menu_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nideshop_order_menu_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>