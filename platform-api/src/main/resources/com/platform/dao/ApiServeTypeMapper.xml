<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiServeTypeMapper">

    <resultMap type="com.platform.entity.ServeTypeVo" id="serveTypeMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="desc" column="desc"/>
        <result property="goodsId" column="goods_id"/>
        <result property="goodsName" column="goods_name"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.ServeTypeVo">
		select
			`id`,
			`name`,
			`desc`,
			`goods_id`,
			`goods_name`
		from nideshop_serve_type
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.ServeTypeVo">
		select
    		`id`,
    		`name`,
    		`desc`,
    		`goods_id`,
    		`goods_name`
		from nideshop_serve_type
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
		<if test="goodsId != null ">
			AND `goods_id` = #{goodsId}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from nideshop_serve_type
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.ServeTypeVo" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_serve_type(
			`name`,
			`desc`,
			`goods_id`,
			`goods_name`)
		values(
			#{name},
			#{desc},
			#{goodsId},
			#{goodsName})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.ServeTypeVo">
		update nideshop_serve_type 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="desc != null">`desc` = #{desc}, </if>
			<if test="goodsId != null">`goods_id` = #{goodsId}, </if>
			<if test="goodsName != null">`goods_name` = #{goodsName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from nideshop_serve_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nideshop_serve_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>