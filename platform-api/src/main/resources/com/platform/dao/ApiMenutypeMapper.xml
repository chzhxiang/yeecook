<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiMenutypeMapper">

    <resultMap type="com.platform.entity.MenutypeEntity" id="menutypeMap">
        <result property="id" column="id"/>
        <result property="menuTypename" column="menu_typename"/>
        <result property="stroeid" column="stroeid"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.MenutypeEntity">
		select
			`id`,
			`menu_typename`,
			`stroeid`
		from menutype
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.MenutypeEntity">
		select
    		`id`,
    		`menu_typename`,
    		`stroeid`
		from menutype
		WHERE 1=1
		<if test="stroeid != null ">
			AND stroeid=#{stroeid}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from menutype
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.MenutypeEntity">
		insert into menutype(
			`id`,
			`menu_typename`,
			`stroeid`)
		values(
			#{id},
			#{menuTypename},
			#{stroeid})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.MenutypeEntity">
		update menutype 
		<set>
			<if test="menuTypename != null">`menu_typename` = #{menuTypename}, </if>
			<if test="stroeid != null">`stroeid` = #{stroeid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from menutype where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from menutype where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>