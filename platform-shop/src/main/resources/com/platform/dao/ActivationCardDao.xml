<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ActivationCardDao">

    <resultMap type="com.platform.entity.ActivationCardEntity" id="activationCardMap">
        <result property="id" column="id"/>
        <result property="activationTime" column="activation_time"/>
        <result property="disabledTime" column="disabled_time"/>
        <result property="activationIp" column="activation_ip"/>
        <result property="activationTerminal" column="activation_terminal"/>
        <result property="userId" column="user_id"/>
        <result property="activationCode" column="activation_code"/>
        <result property="isActivation" column="is_activation"/>
        <result property="serveLastTime" column="serve_last_time"/>
        <result property="serveNextTime" column="serve_next_time"/>
        <result property="haveServeCount" column="have_serve_count"/>
        <result property="orderSn" column="order_sn"/>
        <result property="serveId" column="serve_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.ActivationCardEntity">
		select
			`id`,
			`activation_time`,
			`disabled_time`,
			`activation_ip`,
			`activation_terminal`,
			`user_id`,
			`activation_code`,
			`is_activation`,
			`serve_last_time`,
			`serve_next_time`,
			`have_serve_count`,
			`order_sn`,
			`serve_id`
		from nideshop_activation_card
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.ActivationCardEntity">
		select
    		`id`,
    		`activation_time`,
    		`disabled_time`,
    		`activation_ip`,
    		`activation_terminal`,
    		`user_id`,
    		`activation_code`,
    		`is_activation`,
    		`serve_last_time`,
    		`serve_next_time`,
    		`have_serve_count`,
    		`order_sn`,
    		`serve_id`
		from nideshop_activation_card
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from nideshop_activation_card
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.ActivationCardEntity" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_activation_card(
			`activation_time`,
			`disabled_time`,
			`activation_ip`,
			`activation_terminal`,
			`user_id`,
			`activation_code`,
			`is_activation`,
			`serve_last_time`,
			`serve_next_time`,
			`have_serve_count`,
			`order_sn`,
			`serve_id`)
		values(
			#{activationTime},
			#{disabledTime},
			#{activationIp},
			#{activationTerminal},
			#{userId},
			#{activationCode},
			#{isActivation},
			#{serveLastTime},
			#{serveNextTime},
			#{haveServeCount},
			#{orderSn},
			#{serveId})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.ActivationCardEntity">
		update nideshop_activation_card 
		<set>
			<if test="activationTime != null">`activation_time` = #{activationTime}, </if>
			<if test="disabledTime != null">`disabled_time` = #{disabledTime}, </if>
			<if test="activationIp != null">`activation_ip` = #{activationIp}, </if>
			<if test="activationTerminal != null">`activation_terminal` = #{activationTerminal}, </if>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="activationCode != null">`activation_code` = #{activationCode}, </if>
			<if test="isActivation != null">`is_activation` = #{isActivation}, </if>
			<if test="serveLastTime != null">`serve_last_time` = #{serveLastTime}, </if>
			<if test="serveNextTime != null">`serve_next_time` = #{serveNextTime}, </if>
			<if test="haveServeCount != null">`have_serve_count` = #{haveServeCount}, </if>
			<if test="orderSn != null">`order_sn` = #{orderSn}, </if>
			<if test="serveId != null">`serve_id` = #{serveId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from nideshop_activation_card where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nideshop_activation_card where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>