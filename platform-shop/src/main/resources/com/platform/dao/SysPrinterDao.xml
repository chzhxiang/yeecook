<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.SysPrinterDao">

    <resultMap type="com.platform.entity.SysPrinterEntity" id="sysPrinterMap">
        <result property="id" column="id"/>
        <result property="appId" column="app_id"/>
        <result property="appKey" column="app_key"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.SysPrinterEntity">
		select
			`id`,
			`app_id`,
			`app_key`
		from sys_printer
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.SysPrinterEntity">
		select
    		`id`,
    		`app_id`,
    		`app_key`
		from sys_printer
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_printer
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.SysPrinterEntity">
		insert into sys_printer(
			`id`,
			`app_id`,
			`app_key`)
		values(
			#{id},
			#{appId},
			#{appKey})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.SysPrinterEntity">
		update sys_printer 
		<set>
			<if test="appId != null">`app_id` = #{appId}, </if>
			<if test="appKey != null">`app_key` = #{appKey}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_printer where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_printer where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>