.font-size{
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,57,79,1);
}
.header{
  width:100%;
  padding-top:13rpx;
  padding-left:30rpx;
  padding-right:30rpx;
}
.header_input_type{
  width:100%;
  height:72rpx;
  padding-left:30rpx;
  padding-right:30rpx;
  background:rgba(247,247,250,1);
  border-radius:36px;
  overflow: hidden;
  /* line-height: 72rpx; */
}
.title_input_icon{
  float: left;
  width:30rpx;
  height:30rpx;
  margin-right:11rpx;
  background: url('https://yeecook-shop-pl.oss-cn-shenzhen.aliyuncs.com/upload/20191008/174538356eab87.png') 0 0 no-repeat;
  background-size: 100% 100%;
  vertical-align: middle;
  position: relative;
  top:50%;
  margin-top:-15rpx;
}
.input{
  float: left;
  width:590rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,57,79,1);
}
.history{
  padding-top:60rpx;
  padding-left:30rpx;
  padding-right:30rpx;
  overflow: hidden;
}
.history_title{
  display: inline-block;
  height:44rpx;
  line-height: 44rpx;
  font-size:32rpx;
  font-weight:bold;
}
.history_title_icon{
  float:right;
  width:44rpx;
  height:44rpx;
  background: url('https://yeecook-shop-pl.oss-cn-shenzhen.aliyuncs.com/upload/20191009/1053111154176a.png') 0 0 no-repeat;
  background-size: 100% 100%;
}
.item{
  padding-left:30rpx;
  padding-right:30rpx;
}
.item_name{
  margin-top:22rpx;
  margin-right:20rpx;
  display: inline-block;
  height:50rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(51, 57, 79, 0.5);
  border-radius:8px;
  text-align: center;
  line-height: 48rpx;
  font-size:28rpx;
  padding-left:14rpx;
  padding-right:14rpx;
}