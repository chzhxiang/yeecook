}
.content_day_select{
  position: fixed;
  top:50%;
  left:50%;
  width:700rpx;
  height:600rpx;
  z-index:10;
  background:white;
  border-radius: 10rpx;
  margin-left:-350rpx;
  margin-top:-300rpx;
}
.select_title{
  height:100rpx;
  width:100%;
  line-height:100rpx;
  text-align: center;
  border-bottom: 1px solid #dddddd;
  overflow: hidden;
}
.title_con{
  float:left;
  width:16.6%;
  height:100rpx;
  padding:10rpx;
}
.title_item{
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
}
.title_item_selsect{
  text-align: center;
  height:80rpx;
  width:80rpx;
  line-height: 80rpx;
  background:#66ca9b;
  border-radius: 50%;
  color:white;
  margin:0 auto;
}
.add_right{
  width:100rpx;
  height:100rpx;
  padding:15rpx;
}
.add_right>image{
  width:100rpx;
  height:100%;
