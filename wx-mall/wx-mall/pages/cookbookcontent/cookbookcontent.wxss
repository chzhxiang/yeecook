.content_header{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  overflow: hidden;
  padding-left:23rpx;
  padding-right:23rpx;
}
.header_title>text{
  float:left;
  font-size:35rpx;
}
.header_img{
  float:right;
  width:65rpx;
  height:100rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.header_img>image{
  width:100%;
  height:100%;
  object-fit: cover;
}
.content{
 width:100%;
}
.content_title{
  background:#fdf7d8;
  width:100%;
  height:80rpx;
}
.content_title>view{
  float:left;
  width:33.3%;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
}
.content_con{
  width:100%;
  background:#f5f5f5;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.con_public{
  height:100rpx;
  line-height: 100rpx;
  background:white;
  overflow: hidden;
  padding-left:23rpx;
  padding-right:23rpx;
}
.con_title_left{
  float:left;
}
.con_title_right{
  float:right;
}

.con_one_left{
  float:left;
  width:80rpx;
  height:100rpx;
  padding-top:15rpx;
  padding-bottom:45rpx;
}
.con_one_left>image{
  width:100%;
  height:100%;
  object-fit: cover;
}
.con_one_con{
  float:left;
  font-size:30rpx;
  color:black;
  padding-left:15px;
}
.con_one_right{
  float:right;
  position: relative;
}
.con_one_hh{
  height:100rpx;
}
.con_active{
  height:100rpx;
  border-bottom:1px dotted gray;
}
.cont_one_text{
  color:#a2a2a2;
  padding-right:90rpx;
}
.con_one_ic{
  position:absolute;
  width:65rpx;
  height:60rpx;
  right:13rpx;
  top:20rpx;
}
.con_one_ic>image{
  width:100%;
  height:100%;
  object-fit: cover;
}
.titel_font{
  font-size:35rpx;
  color:black;
  font-weight: 600;
}
.title_border_left{
  border-left:5rpx solid #e9d158;
}
.title_time{
  padding-left:35rpx;
  color:#a2a2a2;
}
.content_day{
  position:fixed;
  top: 0;
  left: 0;
  z-index:9;
  width:100%;
  height:100%;
  background:black;
  opacity: 0.2;
  overflow: hidden;
  /* padding-left:23rpx;
  padding-right:23rpx; */
