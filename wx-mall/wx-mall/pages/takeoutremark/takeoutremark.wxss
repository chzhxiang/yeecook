.remark{
  width:100%;
  height: 100%;
  background:rgba(51,57,79,0.05);
  padding-top:30rpx;
  padding-left:30rpx;
  padding-right:30rpx;
}
.remark_content{
  width:100%;
  height:344rpx;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
  padding:20rpx 20rpx 0rpx 20rpx;
}
.textarea{
  width:100%;
  height:164rpx;
  padding:20rpx;
  box-sizing: border-box;
  background:rgba(245,245,246,1);
  border:1rpx solid rgba(51, 57, 79, 0.1);
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height: 88rpx;
}
.btn{
  margin-left:25rpx;
  margin-top:40rpx;
  width:600rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  background:rgba(106,184,182,1);
  border-radius:40rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}