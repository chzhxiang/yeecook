.header{
  width:100%;
  height:422rpx;
  background:red;
  position: relative;
}
.video{
  height:100%;
  width:100%;
  position: relative;
}
.header-t{
  position: absolute;
  top:20rpx;
  right:30rpx; 
  text-align: center;
  width:100rpx;
  height:60rpx;
  background:rgba(82,166,164,1);
  opacity:0.6;
  border-radius:30rpx;
  line-height: 60rpx;
  font-size:24rpx;
  font-family:  ;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.header-play{
  position: absolute;
  top:50%;
  left:50%;
  width:100rpx;
  height:100rpx;
  margin-left:-50rpx;
  margin-top:-50rpx;
}
.header-play>image{
  width:100%;
  height:100%;
  object-fit: cover;
}
.content-title{
  padding-left:30rpx;
  padding-right:30rpx;
  padding-top:40rpx;
  padding-bottom:40rpx;
  overflow: hidden;
}
.content-title-left{
  float:left;
  width:75%;
  height:95rpx;
}
.content-txt{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-family:PingFang-SC-Bold;
}
.content-txt-title{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,57,79,1);
  opacity:0.8;
  padding-bottom:19rpx;
}
.content-txt-subheading{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,57,79,1);
  opacity:0.5;
}
.content-share{
  float:left;
width:20%;
height:76rpx;
border-left:2rpx solid rgba(0,0,0,0.1);
margin-top:10rpx;
padding-top:8rpx;
padding-left:30rpx;
margin-left:30rpx;

}
.content-share-btn{
  /* width:100rpx; */
  padding:0;
  width:100rpx;
  box-sizing: border-box;
  height:60rpx;
  background:rgba(82,166,164,1);
  border-radius:30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:rgba(255,255,255,1);
  opacity:0.8;
}
.shop{
  padding-left:30rpx;
  padding-right:30rpx;
  height:160rpx; 
  position: relative;
}
.content-shop{
  width:100%;
  height:100%;
  background:rgba(247,247,250,0.8);
  border-radius: 16rpx;
  padding:20rpx;
  overflow: hidden;
}
.content-shop-image{
  width:120rpx;
  height:120rpx;
  border-radius:16rpx;
  overflow: hidden;
  float:left;
  margin-right:20rpx;
}
.content-shop-image>image{
  width:100%;
  height:100%;
  object-fit: cover;
}
.content-shop-title{
  float:left;
  width:503rpx;
  
}
.shop-title-txt{
  font-size:28rpx;
  height:84rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,57,79,1);
  line-height:42rpx;
  opacity:0.8;
}
.shop-price{
  padding-top:5rpx;
}
.price-nowtxt{
  font-size:24rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,108,101,1);
  line-height: 42rpx;
  padding-right:23rpx;
}
.price-oldtxt{
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:rgba(51,57,79,1);
  opacity:0.5;
  line-height: 42rpx;
  text-decoration:line-through;
}
.buy-btn{
  width:100rpx;
  height:60rpx;
  background:linear-gradient(270deg,rgba(255,85,76,1),rgba(255,112,76,1));
  border-radius:30rpx;
  position: absolute;
  right:50rpx;
  bottom:20rpx;
  line-height: 60rpx;
  text-align: center;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:rgba(255,255,255,0.8);
}
.bg{
  margin-top:40rpx;
  width:100%;
  height:20rpx;
  background:rgba(247,247,250,1);
}
.video-detail{
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top:40rpx;
}
.video-detail-title{
  height:31rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,57,79,1);
  line-height:42rpx;
  opacity:0.8;
}
.video-detail-content,.comment-content{
  padding-top:20rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  line-height:42rpx;
  opacity:0.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-right:21rpx;
}
.comment-content{
  opacity: 0.8;
}
.comment{
  padding-left:30rpx;
  padding-right:30rpx;
  padding-top:40rpx;
}
.comment-header{
  overflow: hidden;
}
.comment-title{
  height:31rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,57,79,1);
  line-height:42rpx;
  opacity:0.8;
  float:left;
}
.comtent-title-all{
  float:right;
}
.comtent-title-alltxt{
  float:right;
  height:42rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,57,79,1);
  line-height:42rpx;
  opacity:0.5;
}
.comtent-title-image{
  float:right;
  width:18rpx;
  height:35rpx;
  object-fit: cover;
  opacity: 0.5;
  vertical-align: middle;
  margin-left:11rpx;
  margin-top:3rpx;
}
.comment-list{
  padding-top:20rpx;
  overflow: hidden;
  padding-bottom:40rpx;
}
.comment-user{
  overflow: hidden;
}
.comment-portait{
  float:left;
  width:60rpx;
  height:60rpx;
  border-radius:50%;
  overflow: hidden;
}
.comment-portait>image{
  width:100%;
  height:100%;
  object-fit: cover;
}
.comment-username{
  float:left;
  height:60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  opacity:0.5;
  margin-left:21rpx;
}

