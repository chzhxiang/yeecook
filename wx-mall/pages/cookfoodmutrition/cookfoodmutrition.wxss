.header{
  overflow: hidden;
  padding-left:30rpx;
  padding-right:30rpx;
  width:100%;
  height:80rpx;
  background:rgba(247,247,250,1);
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,57,79,1);
}
.header-left{
  float:left;
  opacity: 0.5;
}
.header-right{
  float:right;
  opacity: 0.5;
}
.list{
  overflow: hidden;
  width:100%;
  height:120rpx;
  line-height: 120rpx;
  border-bottom:1rpx solid rgba(0,0,0,0.1);
}
.list-left{
  float:left;
  padding-left:30rpx;

}
.list-right{
  float:right;
  padding-right:30rpx;
}
.list-txt{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  opacity: 0.8;
}