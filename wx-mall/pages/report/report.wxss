/* pages/report/report.wxss */
.report{
  padding-top:20rpx;
  padding-bottom:20rpx;
  padding-left:30rpx;
  padding-right:30rpx;
}
.title{
  height:50rpx;
  line-height: 50rpx;
  overflow: hidden;
}
.title-left{
  float:left;
  font-size:36rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,57,79,1);
  opacity: 0.8;
  line-height: 50rpx;
}
.title-right{
  float:right;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  opacity: 0.5;
  line-height: 50rpx;
}
.content{
  padding-top:40rpx;
}
.item{
  height:160rpx;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
  border:2rpx solid rgba(223,224,229,1);
  margin-bottom:30rpx;
  overflow: hidden;
}
.item-1{
  float:left;
  width:140rpx;
  line-height: 160rpx;
  padding-left:30rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  opacity: 0.5;
}
.item-2{
  float:left;
  font-size:20rpx;
  width:60rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  opacity: 0.5;
  writing-mode: lr-tb;
  padding-top:50rpx;
  padding-bottom:50rpx;
  letter-spacing: 10rpx;
  word-wrap:break-word;
  text-align: center;
  padding-left:20rpx;
}
.item-3{
  float:left;
  width:210rpx;
  line-height: 160rpx;
  font-size:48rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,57,79,1);
  opacity: 0.8;
  /* padding-left:20rpx; */
  text-align: center;
}
.item-4{
  float:right;
  line-height:160rpx;
  padding-right:30rpx;
}
.item-4>image{
  width:22rpx;
  height:40rpx;
  object-fit: cover;
  vertical-align: middle;
  opacity: 0.5;
}
.bmi{
  padding-top:40rpx;
}
.bmi-number{
  width:160rpx;
}
.btn{
  box-sizing: content-box;
  margin-left:75rpx;
  margin-right:75rpx;
  width:600rpx;
  height:80rpx;
  background:rgba(106,184,182,1);
  border-radius:48rpx;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  bottom:40rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,0.8);
  z-index: 10;
}
.btn-bg{
  width:100%;
  height:140rpx;
  position: fixed;
  bottom:0;
  z-index:9;
  background: white;
}
.bg{
  width: 100%;
  height:100rpx;
}