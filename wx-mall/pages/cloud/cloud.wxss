.cloud{
  position: relative;
  z-index: 10;
}
.header{
  width:100%;
  padding-right:30rpx;
  padding-left:30rpx;
  height:320rpx;
  border-bottom:1rpx solid rgba(0,0,0,0.1); 
}
.banner {
  width: 100%;
  height: 280rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner image {
  width: 100%;
  height: 280rpx;
  object-fit: cover;
}
.item{
  height:100%;
  border-bottom:1rpx solid rgba(0,0,0,0.1);
  padding-left:30rpx;
  padding-right:30rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.item_li{
  width:100%;
  height:400rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.item_li image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}
.txt{
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.one{
  height:55rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  line-height:55rpx;
}
.two{
  height:50rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,57,79,1);
  line-height:50rpx;
  opacity: 0.5;
}
/* 浮动购物车 */
.float_cart{
  position: fixed;
  bottom:30rpx;
  width:100rpx;
  height:100rpx;
  z-index: 100;
  right:30rpx;
}
.float_cart>image{
  width:100%;
  height:100%;
  object-fit: cover;
}